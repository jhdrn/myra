{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "target": "es5",
        "module": "umd",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "pretty": true,
        "outDir": "./build",
        "baseUrl": "./",
        "reactNamespace": "jsxFactory",
        "jsx": "react",
        "paths": {
            "core": ["src/core/index"],
            "core/contract": ["src/core/contract"],
            "core/dispatch": ["src/core/dispatch"],
            "core/helpers": ["src/core/helpers"],
            "core/subscriptions": ["src/core/subscriptions"],
            "core/validation": ["src/core/validation"],
            "core/view": ["src/core/view"],
            "html": ["src/html/index"],
            "html/elements": ["src/html/elements"],
            "html/jsxFactory": ["src/html/jsxFactory"],
            "http": ["src/http"],
            "location": ["src/location"],
            "time": ["src/time"]
        },
        "listEmittedFiles": true
    },
    "include": [
        "./src/**/*.ts",
        "./test/unit/*.ts",
        "./test/unit/*.tsx",
        "./node_modules/@types/jasmine/index.d.ts"
    ]
}