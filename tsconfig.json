{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015"
        ],
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "pretty": true,
        "outDir": "./build",
        "baseUrl": "./",
        "jsxFactory": "core.h",
        "jsx": "react",
        "paths": {
            "core": [
                "src/index"
            ],
            "core/component": [
                "src/component"
            ],
            "core/contract": [
                "src/contract"
            ],
            "core/helpers": [
                "src/helpers"
            ],
            "core/renderer": [
                "src/renderer"
            ],
            "core/jsxFactory": [
                "src/jsxFactory"
            ]
        },
        "listEmittedFiles": true
    },
    "include": [
        "./src/**/*.ts",
        "./test/unit/*.ts",
        "./test/unit/*.tsx",
        "./node_modules/@types/jasmine/index.d.ts"
    ]
}